{
	"name": "@snippetbox/web",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier . --write --experimental-cli --cache --cache-location=.prettiercache",
		"lint": "prettier . --check --experimental-cli --cache --cache-location=.prettiercache && oxlint --type-aware .",
		"up:deps": "pnpm update -i --latest",
		"preinstall": "npx only-allow pnpm"
	},
	"devDependencies": {
		"@prettier/plugin-oxc": "^0.0.4",
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/kit": "^2.43.8",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24.6.2",
		"globals": "^16.0.0",
		"oxlint": "^1.19.0",
		"oxlint-tsgolint": "^0.2.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.39.8",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.9"
	},
	"engines": {
		"node": "22.20.0"
	},
	"packageManager": "pnpm@10.18.0",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"valibot": "^1.1.0"
	}
}
